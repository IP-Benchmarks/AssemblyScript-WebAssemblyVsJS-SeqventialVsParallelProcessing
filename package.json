{
    "name": "assemblyscript-webassemblyvsjs-seqventialvsparallelprocessing",
    "version": "1.0.0",
    "description": "Performance comparation of WebAssembly and Javascript in sequential and parallel workloads in different available runtimes like Web, Node and Deno.",
    "main": "index.js",
    "scripts": {
        "test": "node tests",
        "copy:wasm": "copyfiles ./wasm/* ./dist/",
        "asbuild:fractal": "asc assembly/fractal.ts --target fractal  --use abort= && copyfiles ./wasm/fractal/* ./dist/ ",
        "asbuild:quicksort": "asc assembly/quicksort.ts --target quicksort --use abort= && copyfiles ./wasm/quicksort/* ./dist/ ",
        "asbuild:optimized": "asc assembly/index.ts --target release --use abort= && copyfiles ./wasm/* ./dist/ ",
        "asbuild:js": "tsc --project ./tsconfig.assembly.json && copyfiles ./wasm/js/* ./dist/ ",
        "build:tsc": "tsc",
        "build:asc": "npm-run-all --parallel asbuild:* && npm run copy:wasm",
        "build": "npm run build:asc && npm run build:tsc",
        "start": "npm run build && node ./dist/main.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IulianOctavianPreda/AssemblyScript-WebAssemblyVsJS-SeqventialVsParallelProcessing.git"
    },
    "author": "Iulian Preda",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/IulianOctavianPreda/AssemblyScript-WebAssemblyVsJS-SeqventialVsParallelProcessing/issues"
    },
    "homepage": "https://github.com/IulianOctavianPreda/AssemblyScript-WebAssemblyVsJS-SeqventialVsParallelProcessing#readme",
    "dependencies": {
        "@assemblyscript/loader": "^0.18.24",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.2.4"
    },
    "devDependencies": {
        "@types/node": "^14.14.37",
        "assemblyscript": "^0.18.24",
        "copyfiles": "^2.4.1"
    }
}
